<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/auto_dp_2"
    app:cardElevation="@dimen/auto_dp_2"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="@dimen/auto_dp_3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarIv"
            android:layout_width="@dimen/auto_dp_50"
            android:layout_height="@dimen/auto_dp_50"
            android:src="@drawable/bg_avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginLeft="@dimen/auto_dp_5"
                android:textColor="@color/lite_blue"
                android:textSize="@dimen/auto_sp_16"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_mail"
                android:layout_marginStart="@dimen/auto_dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/auto_sp_12"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>