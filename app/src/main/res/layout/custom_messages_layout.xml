<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIv"
        android:layout_width="@dimen/auto_dp_40"
        android:layout_height="@dimen/auto_dp_40"
        android:layout_marginTop="@dimen/auto_dp_10"
        android:src="@drawable/profile_image"
        />

    <TextView
        android:id="@+id/messageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/auto_dp_10"
        android:layout_marginLeft="@dimen/auto_dp_3"
        android:layout_toEndOf="@+id/profileIv"
        android:background="@drawable/receiver_messages_layout"
        android:text="Xin chào, lâu không gặp"
        android:padding="@dimen/auto_dp_10"
        android:textSize="@dimen/auto_sp_14"
        android:layout_marginRight="@dimen/auto_dp_50"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText,RtlCompat,RtlHardcoded"
        />


    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="@dimen/auto_dp_150"
        android:layout_height="@dimen/auto_dp_150"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/auto_dp_5"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription,RtlCompat"
        />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="@dimen/auto_dp_150"
        android:layout_height="@dimen/auto_dp_150"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/auto_dp_5"
        android:layout_marginLeft="@dimen/auto_dp_5"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription,RtlCompat,RtlHardcoded"
        />


    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/auto_dp_10"
        android:layout_alignParentTop="@+id/messageTv"
        android:background="@drawable/sender_messages_layout"
        android:text="Hi, bạn khỏe không"
        android:textSize="@dimen/auto_sp_14"
        android:padding="@dimen/auto_dp_10"
        android:layout_marginRight="@dimen/auto_dp_5"
        android:layout_marginLeft="@dimen/auto_dp_50"
        android:layout_marginBottom="@dimen/auto_dp_1"
        android:textColor="@color/white"
        tools:ignore="HardcodedText,RtlCompat,RtlHardcoded"
        />

</RelativeLayout>