<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_blue">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileIv"
        android:layout_width="@dimen/auto_dp_56"
        android:layout_height="@dimen/auto_dp_56"
        android:padding="@dimen/auto_dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/auto_dp_40"
            android:layout_marginTop="@dimen/auto_dp_6"
            android:layout_marginEnd="@dimen/auto_dp_20"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="@dimen/auto_sp_16" />

        <TextView
            android:id="@+id/userStatusTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/auto_dp_40"
            android:layout_marginEnd="@dimen/auto_dp_20"
            android:text="@string/online"
            android:textColor="@color/white"
            android:textSize="@dimen/auto_sp_12" />

    </LinearLayout>

</RelativeLayout>