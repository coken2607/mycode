<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textColorHint">@color/brown_grey</item>
        <item name="colorControlNormal">@color/gray_300</item>
        <item name="colorControlActivated">@color/colorPri</item>
        <item name="colorControlHighlight">@color/colorPri</item>
    </style>

</resources>
